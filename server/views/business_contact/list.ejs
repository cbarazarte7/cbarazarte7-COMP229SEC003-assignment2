<%-include ../partials/header.ejs%>
<%-include ../partials/main_nav.ejs%>
  <!--Main Nav Navigation-->
  
<main class="container">
  <div class="row">
    <div class="offset-md-1 col-md-10">
        <h1><%=title %></h1>
          <%if(typeof displayName =='string'&&displayName){%>
        <a href="/businessContact/add" class="btn btn-primary" role="button"><i class="fas fa-plus-circle"></i>Add a Book</a>
        <%}%>
        <br>
        <table class="table table-bordered table-striped table-hover">
            <!--Header Row-->
            <tr>
              <%if(typeof displayName =='string'&&displayName){%>
                <th class="text-center col-2">Name</th>
                <th class="text-center col-2">Number</th>
                <th class="text-center col-1">Email</th>
                
                <th class="text-center col-1"></th>
                <th class="text-center col-1"></th>
                <%}else{%>
                  <th class="text-center col-2">Name</th>
                <th class="text-center col-2">Number</th>
                <th class="text-center col-1">Email</th>
                <%}%>
                </tr>
               <%for(let count = 0; count < BusinessContact.length; count ++){%>
                    <tr>
                          <%if(typeof displayName =='string'&&displayName){%>
                        <td class="text-center col-2"><%=BusinessContact[count].name%></td>
                        <td class="text-center col-2"><%=BusinessContact[count].number%></td>
                        <td class="text-center col-1"><%=BusinessContact[count].email%></td>
                    
                        <td class="text-center col-1"><a href="/businessContact/edit/<%=BusinessContact[count]._id%>" class="btn btn-primary"><i class="fas fa-pencil-alt"></i>Edit</a></td>
                        <td class="text-center col-1"><a href="/businessContact/delete/<%=BusinessContact[count]._id%>" class="btn btn-danger"><i class="fas fa-trash-alt"></i>Delete</a></td>
                        <%}else{%>
                          <td class="text-center col-2"><%=BusinessContact[count].name%></td>
                        <td class="text-center col-2"><%=BusinessContact[count].number%></td>
                        <td class="text-center col-1"><%=BusinessContact[count].emaik%></td>
                        <%}%>  
                      </tr>
                        <%}%>
            </table>
        </div>
    </div>
  </main>
  
